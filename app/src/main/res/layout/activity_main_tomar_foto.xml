<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:orientation="vertical"
    tools:context=".MainActivityTomarFoto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <ImageView
            android:id="@+id/fotoTomada"
            android:layout_width="match_parent"
            android:layout_height="161dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:foreground="@drawable/img_foto" />

        <Button
            android:id="@+id/musicaFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#D0FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:gravity="start"
            android:onClick="mute"
            android:text="Musica on" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="328dp">

        <Button
            android:id="@+id/btnTomarFoto"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="220dp"
            android:onClick="Fotomat"
            android:text="Hacer Foto" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_gravity="right"
            android:layout_marginTop="70dp"
            android:foreground="@drawable/fondo3_foto"
            android:foregroundGravity="right" />

        <Button
            android:id="@+id/btnIrAJugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center|right"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="250dp"
            android:onClick="IrAJugar"
            android:text="Jugar" />

    </FrameLayout>

</LinearLayout>