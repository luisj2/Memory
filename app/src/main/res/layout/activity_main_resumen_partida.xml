<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#F57F17"
    app:layout_anchorGravity="center"
    tools:context=".MainActivityResumenPartida">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="411dp"
        android:layout_height="490dp"
        android:layout_gravity="center"
        android:foreground="@drawable/fondo_resumen" />

    <TextView
        android:id="@+id/textViewAciertos"
        android:layout_width="124dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:gravity="center|start"
        android:text="Aciertos:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnIrAInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#771A237E"
        android:onClick="IrAInicio"
        android:text="Continuar"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewPuntosTotal"
        android:layout_width="126dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:gravity="center|start"
        android:text="Puntos: "
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewFallos"
        android:layout_width="124dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:gravity="center|start"
        android:text="Fallos: "
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnMusicaResumen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#A3FFFFFF"
        android:text="Musica on"
        android:textColor="#F6F1F1" />
</FrameLayout>